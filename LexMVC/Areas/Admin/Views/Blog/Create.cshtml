@model LexMVC.Models.BlogPostVM
@{
    ViewData["Title"] = "Create blog";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Blog/Index">Blog</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Blog
        </div>
        <div class="card-body">
            <div class="form-group">
                @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input name="BlogTitle" id="BlogTitle" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Content</label>
                        <textarea name="Content" id="Content" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image</label>
                        <input type="file" name="file" id="file" class="form-control dropify" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
            $('.summernote').summernote({
                tabsize: 2,
                height: 500
            });
        });

    </script>
}