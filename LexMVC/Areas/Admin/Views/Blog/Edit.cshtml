@model LexMVC.Models.BlogPostVM
@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Blog/Index">Blog</a>
        </li>
        <li class="breadcrumb-item active">Update</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Blog
        </div>
        <div class="card-body">
            <div class="form-group">

                @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(s => s.BlogId)
                    @Html.HiddenFor(s => s.BlogImage)
                    <div class="form-group">
                        <label class="control-label">Title</label>
                        @Html.EditorFor(model => model.BlogTitle, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control summernote" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image</label>
                        <input type="file" name="file" id="file" class="form-control dropify" data-default-file="@Url.Content(Model.BlogImage)">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
            $('.summernote').summernote({
                tabsize: 2,
                height: 500
            });
        });

    </script>
}