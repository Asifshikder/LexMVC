@model LexMVC.Models.NavlinkSetup
@{
    ViewData["Title"] = "Update";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Navlink/Index">NavlinkSetup</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Pivacy
        </div>
        <div class="card-body">
            <div class="form-group">

                @using (Html.BeginForm("Create", "Navlink", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="control-label">Basic navbar link</label>
                        @Html.DropDownListFor(s => s.BasicProductId, (IEnumerable<SelectListItem>)ViewBag.products, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Advance navbar link</label>
                        @Html.DropDownListFor(s => s.AdvanceProductId, (IEnumerable<SelectListItem>)ViewBag.products, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ultimate navbar link</label>
                        @Html.DropDownListFor(s => s.UltimateProductId, (IEnumerable<SelectListItem>)ViewBag.products, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
                </div>

        </div>
    </div>
</div>