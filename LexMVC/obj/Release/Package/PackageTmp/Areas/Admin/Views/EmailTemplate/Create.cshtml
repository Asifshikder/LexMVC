@model LexMVC.Models.MailBodyContent
@{
    ViewData["Title"] = "Create";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/EmailTemplate/Index">EmailTemplate</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> EmailTemplate
        </div>
        <div class="card-body">
            <div class="form-group">
                @using (Html.BeginForm("Create", "EmailTemplate", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="control-label">Gretting lines</label>
                        <textarea name="GreetingHeader" id="GreetingHeader" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Body lines</label>
                        <textarea name="MiddleContent" id="MiddleContent" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Regards lines</label>
                        <textarea name="FooterContent" id="FooterContent" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
            $('.summernote').summernote({
                tabsize: 2,
                height: 200
            });
        });

    </script>
}